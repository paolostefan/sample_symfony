<form method="post" action="{{ path('poi_delete', {'id': poi.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poi.id) }}">
    <button class="btn bg-red">Delete</button>
</form>
